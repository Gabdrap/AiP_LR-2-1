#include <iostream>
#include <Windows.h>
#include <cstring>
using namespace std;

struct dayn
{
    float temp;
    float speed;
    char wind[20];
    char prec[4];
    float averageTemp;
    float averageSpeed;
    int rain;
    int snow;
};

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    dayn d;
    d.averageTemp = 0;
    d.averageSpeed = 0;
    d.rain = 0;
    d.snow = 0;
    int n = 0;
    char quit[5];

    while (true)
    {
        cout << "day " << n + 1 << ":" << '\n';
        cout << "temperature: " << '\n';
        cin >> d.temp;
        d.averageTemp += d.temp;

        cout << "wind: " << '\n';
        cin >> d.wind;

        cout << "wind speed: " << '\n';
        cin >> d.speed;
        d.averageSpeed += d.speed;

        cout << "precipitation: rain, snow" << '\n';
        cin >> d.prec;
        if (strcmp(d.prec, "rain") == 0) {
            d.rain++;
        }
        else {
            d.snow++;
        }

        n++;

        cout << "type quit to finish" << '\n';
        cin >> quit;

        if (strcmp(quit, "quit") == 0) {
            break;
        }
    }

    float b = d.averageTemp / n;
    float c = d.averageSpeed / n;
    cout << "Average temperature: " << b << '\n';
    cout << "Average wind speed: " << c << '\n';
    if (d.rain >= d.snow)
    {
        cout << "Наиболее частые осадки: дождь" << endl;
    }
    else if (d.rain = d.snow)
    {
        cout << "Снега и дождя выпало одинаково" << endl;
    }
    else
    {
        cout << "Наиболее частые осадки: снег" << endl;
    }

    return 0;
}
