#include <iostream>
#include <Windows.h>
using namespace std;

int main() {
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	float temp;
	float speed;
	char wind[20];
	char prec[20];
	int day;
	int n = 1;
	float averageTemp = 0;
	float averageSpeed = 0;

	cout << "Сколько дней хотите учесть? Введите количество дней: ";
	cin >> day;
	for (day; n <= day; n++)
	{
		cout << "day " << n << ":" << '\n';
		cout << "temperature: " << '\n';
		cin >> temp;
		averageTemp += temp;
		cout << "wind: " << '\n';
		cin >> wind;
		cout << "wind speed: " << '\n';
		cin >> speed;
		averageSpeed += speed;
		cout << "precipitation: " << '\n';
		cin >> prec;
		cout << "type quit to finish" << '\n';
	}
	float b = (averageTemp / day);
	float c = (averageSpeed / day);
	cout << "Average temperature: " << b << '\n';
	cout << "Average wind speed: " << c << '\n';
}
