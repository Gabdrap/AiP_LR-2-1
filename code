#include <iostream>
#include <Windows.h>
using namespace std;

int main() {
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	float temp;
	float speed;
	char wind[20];
	char prec[20];
	int day;
	int n = 1;

	cout << "Сколько дней хотите учесть? Введите количество дней: ";
	cin >> day;
	for (day; day >= n; n++)
	{
		cout << "day " << n << ":" << '\n';
		cout << "temperature: " << '\n';
		cin >> temp;
		cout << "wind: " << '\n';
		cin >> wind;
		cout << "wind speed: " << '\n';
		cin >> speed;
		cout << "precipitation: " << '\n';
		cin >> prec;
		cout << "type quit to finish" << '\n';
	}
}
